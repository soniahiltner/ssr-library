<h2 class="page-header">Search Books</h2>
<div class="book-form-container">
  <form
    action="/books/results"
    method="GET"
  >
    <div class="form">
      <label for="title">Title</label>
      <input
        type="text"
        name="title"
        id="title"
        value="<%= searchOptions.title %>"
      />
    </div>
    <div class="form-row">
      <div class="form">
        <label for="publishedAfter">Published After</label>
        <input
          class="input-year"
          type="number"
          name="publishedAfter"
          id="publishedAfter"
          value="<%= searchOptions.publishedAfter %>"
          max="<% new Date().getFullYear() %>"
        />
      </div>
      <div class="form">
        <label for="publishedBefore">Published Before</label>
        <input
          class="input-year"
          type="number"
          name="publishedBefore"
          id="publishedBefore"
          value="<%= searchOptions.publishedBefore %>"
          max="<% new Date().getFullYear() %>"
        />
      </div>
    </div>
    <div class="form-row">
      <div class="form">
        <label for="category">Category</label>
        <select
          name="category"
          id="category"
        >
          <option
            style="display: none"
            value=""
          ></option>
          <% categories.forEach(category => { %>
          <option
            label="<%= category.name %>"
            value="<%= category.id %>"
          ></option>
          <% }) %>
        </select>
      </div>
      <div class="form">
        <label for="format">Format</label>
        <select
          name="format"
          id="format"
        >
          <option
            style="display: none"
            value=""
          ></option>
          <% formats.forEach(format => { %>
          <option
            label="<%= format.name %>"
            value="<%= format.id %>"
          ></option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="form">
        <label for="country">Country</label>
        <select
          name="country"
          id="country"
        >
          <option
            style="display: none"
            value=""
          ></option>
          <% countries.forEach(country => { %>
          <option
            label="<%= country.name %>"
            value="<%= country.id %>"
          ></option>
          <% }) %>
        </select>
      </div>
      <div class="form">
        <label for="language">Language</label>
        <select
          name="language"
          id="language"
        >
          <option
            style="display: none"
            value=""
          ></option>
          <% languages.forEach(language => { %>
          <option
            label="<%= language.name %>"
            value="<%= language.id %>"
          ></option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="btn-container">
      <button
        class="btn btn-submit"
        type="submit"
      >
        Search
      </button>
    </div>
  </form>
</div>